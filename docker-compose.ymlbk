
version: '2'
services:
  statistics-db:
    image: postgres
    ports:
      - 3307:5432
    environment:
      POSTGRES_DB: 'statistics'
      POSTGRES_USER: 'statistics'
      POSTGRES_PASSWORD: 'statistics'
  statistics-ms:
    image: caatovarbo/statistics-py
    command: python manage.py runserver 0.0.0.0:8000
    ports:
      - 3004:8000
    depends_on:
      - statistics-db